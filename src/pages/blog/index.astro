---
import BlogLayout from '../../layouts/BlogLayout.astro';
import BlogPost from '../../components/BlogPost.astro';

const blogPosts = [
	{
		title: "Getting Started with Astro",
		date: "Jan 15, 2025",
		description: "Learn how to build fast, modern websites with Astro - the all-in-one web framework designed for speed.",
		slug: "getting-started-with-astro"
	},
	{
		title: "Understanding Astro Islands",
		date: "Feb 2, 2025",
		description: "Discover how Astro's island architecture works and how it makes your websites faster by default.",
		slug: "understanding-astro-islands"
	},
	{
		title: "Building a Blog with Astro",
		date: "Feb 20, 2025",
		description: "A step-by-step tutorial on how to build a performant blog with Astro and deploy it anywhere.",
		slug: "building-a-blog-with-astro"
	},
	{
		title: "Optimizing Astro Performance",
		date: "Mar 5, 2025",
		description: "Tips and tricks to make your Astro sites even faster and more efficient.",
		slug: "optimizing-astro-performance"
	},
	{
		title: "Using View Transitions in Astro",
		date: "Mar 18, 2025",
		description: "How to enhance user experience with smooth transitions between pages in Astro 4.0+.",
		slug: "using-view-transitions-in-astro"
	}
];
---

<BlogLayout>
	<h1>All Blog Posts</h1>
	<p>Check out all the latest articles on Astro and web development.</p>
	
	<div class="blog-list">
		{blogPosts.map(post => (
			<BlogPost 
				title={post.title}
				date={post.date}
				description={post.description}
				slug={post.slug}
			/>
		))}
	</div>
</BlogLayout>

<style>
	.blog-list {
		margin-top: 2rem;
	}
</style>