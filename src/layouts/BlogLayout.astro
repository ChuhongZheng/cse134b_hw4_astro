---
import Layout from './Layout.astro';
import ThemeSelector from '../components/ThemeSelector.astro';
---

<Layout>
	<div slot="title">My Astro Blog</div>
	<header id="blog-header">
		<h1>My Astro Blog</h1>
		<nav>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/blog">Blog</a></li>
				<li><a href="/about">About</a></li>
			</ul>
		</nav>
	</header>
	<main>
		<slot />
	</main>
	<ThemeSelector />
	<footer>
		<p>&copy; 2025 My Astro Blog. All rights reserved.</p>
	</footer>
</Layout>

<style>
	header#blog-header {
		background-color: var(--header-bg, #2d3748);
		color: white;
		padding: 1rem 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	header#blog-header h1 {
		margin: 0;
	}

	nav ul {
		display: flex;
		list-style: none;
	}

	nav li {
		margin-left: 1rem;
	}

	nav a {
		color: white;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	nav a:hover {
		color: #63b3ed;
		text-decoration: underline;
	}

	main {
		max-width: 800px;
		margin: 2rem auto;
		padding: 0 1rem;
		color: var(--text-color, #333);
		background-color: var(--bg-color, #fff);
		font-family: var(--font-family, system-ui);
	}

	footer {
		background-color: var(--footer-bg, #edf2f7);
		text-align: center;
		padding: 1rem;
		margin-top: 2rem;
		border-top: 1px solid #e2e8f0;
	}
</style>