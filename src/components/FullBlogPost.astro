---
interface Props {
	title: string;
	date: string;
	content: string;
}

const { title, date, content } = Astro.props;
---

<article class="full-blog-post">
	<h1>{title}</h1>
	<p class="meta">Published on {date}</p>
	<div set:html={content} />
</article>

<style>
	.full-blog-post h1 {
		color: var(--text-color, #2d3748);
	}

	.meta {
		color: #718096;
		border-bottom: 1px solid #e2e8f0;
		padding-bottom: 1rem;
		margin-bottom: 1rem;
	}

	.full-blog-post :global(h2) {
		color: var(--text-color, #4a5568);
	}

	.full-blog-post :global(p) {
		line-height: 1.6;
		color: var(--text-color, #2d3748);
	}

	.full-blog-post :global(code) {
		background-color: #f7fafc;
		padding: 0.2em 0.4em;
		border-radius: 3px;
	}
</style>